{
  "compilerOptions": {
    "target": "esnext", // Ensure latest JavaScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs", // Jest requires 'commonjs'
    "moduleResolution": "node", // Ensure compatibility with Node.js modules
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve", // Use React JSX transformation
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
